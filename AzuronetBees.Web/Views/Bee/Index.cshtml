@model IEnumerable<AzuronetBees.Web.Models.Bee>

@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Strona główna aplikacji do zarządzania pasieką</title>
    <link type="text/css" rel="stylesheet" href="~/css/bee-styles.css" />
</head>
<body>
    <div class="container">
        <div class="main-title">
            <p class="into">Witamy w Pasiece na Roztoczu</p>
            <button type="button" onclick="location.href='@Url.Action("Create", "Bee")'">Dodaj rodzinę</button>
        </div>
        <div class="img-container">
            @foreach (var item in Model)
            {
                <div class="photo-index-card">
                <h3 class="display-picture-title">
                "@Html.DisplayFor(modelItem => item.BreedOfBees)"
                </h3>
            @if (item.ImageName != null)
             {
<div class="photo-display">
    <img class="photo-display-img" src="@Url.Action("GetImage", "Bee", new { Id = item.BeehiveId })" />
</div>}
    <div>
        <p class="display-label">
            @Html.DisplayNameFor(model => item.Description)
        </p>
        <br />
        <p class="display-field">
            @Html.DisplayFor(model => item.Description)
        </p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@item.BeeId">Edycja</a> |
        <a asp-action="Details" asp-route-id="@item.BeeId">Szczegóły</a> |
        <a asp-action="Delete" asp-route-id="@item.BeeId">Usuwanie</a>
    </div>
</div>      }
        </div>
    </div>
</body>
</html>



