@model AzuronetBees.Web.Models.Bee

@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Szczegóły rodziny pszczelej</title>
    <link type="text/css" rel="stylesheet" href="~/css/bee-styles.css" />
</head>
<body>
    <div class="container">
        <div class="photo-index-card-details">
            <h3 class="display-picture-title">
                "@Html.DisplayFor(modelItem => modelItem.BreedOfBees)"
            </h3>
            @if (Model.ImageName != null)
            {
                <div class="photo-display">
                    <img class="photo-display-img" src="@Url.Action("GetImage", "Bee", new { Id = Model.BeeId })" />
                </div>}
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Description)
                </p>
                <br />
                <p class="display-field">
                    @Html.DisplayFor(model => model.Description)
                </p>
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.SwarmingBees)
                </p>
                <br />
                <p class="display-field">
                    @Html.DisplayFor(model => model.SwarmingBees)
                </p>
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Active)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.Active)
                </p>
            </div>
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Overall)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.Overall)
                </p>
            </div>
            <div>
                <a asp-action="Index">Powrót do strony głównej</a>
            </div>
        </div>
    </div>
</body>
</html>

